---
interface Props {
    href?: string;
    text: string;
    icon?: "phone" | "email" | "location" | "github";
    iconSrc?: string;
    colSpan?: boolean;
}

const { href, text, icon, iconSrc, colSpan = false } = Astro.props;
const base = import.meta.env.BASE_URL;

const iconPaths: Record<string, string> = {
    phone: "M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z",
    email: "M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z",
    location: "M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z",
};
---

<div
    class:list={[
        "contact-card flex items-center justify-center gap-3 p-4 rounded-lg",
        "bg-white/10 dark:bg-slate-800/30 backdrop-blur-sm",
        "border border-slate-300 dark:border-slate-600/30",
        { "md:col-span-2": colSpan },
    ]}
>
    {
        iconSrc ? (
            <img
                src={iconSrc}
                alt="Icon"
                class="w-5 h-5 dark:filter dark:invert"
            />
        ) : icon && iconPaths[icon] ? (
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 text-slate-600 dark:text-slate-400"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d={iconPaths[icon]} />
                {icon === "email" && <polyline points="22,6 12,13 2,6" />}
                {icon === "location" && <circle cx="12" cy="10" r="3" />}
            </svg>
        ) : null
    }

    {
        href ? (
            <a
                href={href}
                class="text-slate-700 dark:text-slate-300 font-medium hover:text-slate-400 dark:hover:text-white transition-colors"
            >
                {text}
            </a>
        ) : (
            <span class="text-slate-700 dark:text-slate-300 font-medium">
                {text}
            </span>
        )
    }
</div>
