---
import GlassCard from '../components/GlassCard.astro';
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ShinyText from '../components/ShinyText.jsx';
import SplitText from '../components/SplitText.jsx';
import {gsap} from 'gsap';
import Timeline from '../components/Timeline/Timeline.jsx';
import { TimelineElement } from '../components/Timeline/TimelineElement.jsx';
const tagIcons: {[key: string]: string} = {
    JavaScript: "tagIcons/js.svg",
    CSS: "tagIcons/css.svg",  
    Python: "tagIcons/python.svg",
    PyPlot: " tagIcons/pyplot.svg",  
    Qiskit: "tagIcons/qiskit.svg",
    HTML: "tagIcons/html.svg",
    SQL:'tagIcons/sql.svg',
	GitHub: "tagIcons/github.svg",
}
const tags = ["JavaScript", "HTML", "CSS", "Python", "PyPlot", "SQL", "GitHub", "React"];

const timelineSteps = [
	{ 
		content: {
			title: "Educación Primaria",
			subtitle: "Uzturpe Ikastola, Ibarra", 
			date: "2010-2016"
		}
	},
	{ 
		content: {
			title: "Bachillerato Científico",
			subtitle: "Orixe BHI, Tolosa",
			date: "2020-2022"
		}
	},
	{ 
		content: {
			title: "Ingeniería Informática (En curso)",
			subtitle: "Universidad - 3er año, Computación",
			date: "2022-..."
		}
	},
];
---

<Layout  title="Amets Martiarena">
	<!-- Hero Section - Centered Name and Contact -->
	<section class="min-h-screen flex items-center justify-center px-4">
		<div class="text-center space-y-8">
			<!-- Name with ShinyText -->
			<div class="mb-8">
				<p class="text-6xl md:text-8xl font-black text-slate-800 dark:text-slate-300">
					Amets Martiarena
				</p>
			</div>
			
			<!-- Contact Information -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto">
				<!-- Phone -->
				<div class="flex items-center justify-center gap-3 p-4 rounded-lg bg-white/10 dark:bg-slate-800/30 backdrop-blur-sm border border-slate-200/20 dark:border-slate-600/30">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-600 dark:text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
					</svg>
					<span class="text-slate-700 dark:text-slate-300 font-medium">688 73 63 86</span>
				</div>
				
				<!-- Email -->
				<div class="flex items-center justify-center gap-3 p-4 rounded-lg bg-white/10 dark:bg-slate-800/30 backdrop-blur-sm border border-slate-200/20 dark:border-slate-600/30">
					<a href="mailto:ametsmarti7@gmail.com" class="flex items-center gap-3 text-slate-700 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
							<polyline points="22,6 12,13 2,6"></polyline>
						</svg>
						<span class="font-medium">ametsmarti7@gmail.com</span>
					</a>
				</div>
				
				<!-- Location -->
				<div class="flex items-center justify-center gap-3 p-4 rounded-lg bg-white/10 dark:bg-slate-800/30 backdrop-blur-sm border border-slate-200/20 dark:border-slate-600/30 md:col-span-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-600 dark:text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
						<circle cx="12" cy="10" r="3"></circle>
					</svg>
					<span class="text-slate-700 dark:text-slate-300 font-medium">Ibarra, Gipuzkoa</span>
				</div>
			</div>
			
			<!-- Scroll indicator -->
			<div class="animate-bounce mt-12">
				<svg class="w-6 h-6 mx-auto text-slate-600 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</div>
		</div>

			
	</section>

	<section class="min-h-screen flex items-center justify-center px-4">
		<Timeline 
			client:load
			steps={timelineSteps}
			orientation="vertical"
			activeColor="#8B5CF6"
			lineColor="#475569"
			stepSize={10}
			className="max-w-4xl mx-auto"
		/>
	</section>
	
	

	

	<!-- Main Content Section -->
	<div class="container mx-auto px-4 py-16 max-w-6xl">

		<!-- CV Section -->
		<GlassCard class="mb-8 p-6m sticky top-0">
			
			<section class="mb-6">
				<h2 class="dark:text-slate-400 light:text-slate-700 font-bold text-xl mb-2">Idiomas</h2>
				<div class="space-y-2 text-slate-700 dark:text-slate-300">
					<div class="flex justify-between">
						<span class="font-medium text-slate-300 dark:text-slate-400">Euskera</span>
						<span>Idioma nativo</span>
					</div>
					<div class="flex justify-between">
						<span class="font-medium text-slate-300 dark:text-slate-400">Inglés</span>
						<span>Nivel B2</span>
					</div>
					<div class="flex justify-between">
						<span class="font-medium text-slate-300 dark:text-slate-400">Castellano</span>
						<span>Nivel alto</span>
					</div>
				</div>
			</section>

			<section class="mb-6">
				<h2 class="dark:text-slate-400 light:text-slate-700 font-bold text-xl mb-2">Habilidades y conocimiento</h2>
				<div class ="tags my-2 flex flex-wrap">
					{tags.map((tag: string) => (
						<span class="flex items-center  bg-slate-100 text-slate-800 text-xs font-medium me-2 px-1.5 py-0.5 rounded dark:bg-slate-700 dark:text-slate-400 border border-purple-400 mb-2">
							{tagIcons[tag] && <img src={tagIcons[tag]} alt={tag} class="w-4 h-4 mr-1"/>}
							{tag}
						</span>
					))}
				</div>
				<h2 class="dark:text-slate-400 light:text-slate-700 font-bold text-xl mb-2">Areas de Interés </h2>
				<div class="space-y-2 text-slate-700 dark:text-slate-300">
					<ul class="list-none space-y-2 text-slate-700 dark:text-slate-300">
						<li>Desarrollo/Diseño Web</li>
						<li>Gráficos 3D y Shaders</li>
						<li>Simulación de Entornos Fisicos</li>
					</ul>
				</div>
			</section>

			<section>
				<h2 class="dark:text-slate-400 light:text-slate-700 font-bold text-xl mb-2">Formación Académica</h2>
				<div class="space-y-4 text-slate-700 dark:text-slate-300">
					<div>
						<h3 class="dark:text-slate-400 light:text-slate-700 font-semibold text-lg">Grado en Ingeniería Informática (En curso)</h3>
						<p class="text-sm text-slate-400 dark:text-slate-400 mb-2">2022-2026</p>
						<p class="text-sm text-slate-400 dark:text-slate-400 mb-2">Actualmente en el 3er año, especializándome en Computación.</p>
					</div>
					<div>
						<h3 class="dark:text-slate-400 light:text-slate-700 font-semibold text-lg">Estudios de Bachillerato</h3>
						<p class="text-sm text-slate-500 dark:text-slate-400 mb-2">Rama de Ciencias,Orixe BHI, Tolosa</p>
					</div>
					<div>
						<h3 class="dark:text-slate-400 light:text-slate-700 font-semibold text-lg">Educación Primaria</h3>
						<p class="text-sm text-slate-500 dark:text-slate-400 mb-2">Uzturpe Ikastola, Ibarra</p>
					</div>
				</div>
			</section>
		</GlassCard>
	
		<!-- Projects Section -->
		<GlassCard class="p-6">
			<section>
				<h2 class="dark:text-slate-400 light:text-slate-700 font-bold text-2xl mb-6 text-center">Mis Proyectos</h2>
				<div class="grid place-items-center grid-flow-row gap-8 grid-cols-1 md:grid-cols-2 xl:grid-cols-3">
					<ProjectCard name="Calculator" 
						desc="Una calculadora simple hecha con HTML, CSS y JavaScript. Implementa un interruptor dinámico de tema claro/oscuro." 
						href="https://www.github.com/AmetsMarti/Calculator"
						image_url="calculator_thumbnail.jpg"
						width="300"
						height="200"
						alt="Miniatura de la calculadora"
						tags={["JavaScript","HTML","CSS"]} />

					<ProjectCard name="mapGenerator" 
						tags={["Python", "PyPlot"]}	
						href="https://www.github.com/AmetsMarti/mapGenerator"						
						alt="Miniatura del generador de mapas"
						desc="Un generador de mapas que implementa autómatas celulares y movimiento aleatorio para generar mapas similares a los juegos roguelike"
						image_url="map_generator_thumbnail.png"
						width="300"
						height="200" />
						
					<ProjectCard name ="TheDB"
						tags={["JavaScript", "HTML", "CSS", 'SQL']}	
						href="https://www.github.com/AmetsMarti/TheDB"
						alt="Miniatura de TheDB"
						desc="Una aplicación Full Stack que utiliza una base de datos MySQL externa para almacenar los libros que estoy leyendo con su información respectiva"
						image_url="thedb_thumbnail.png"
						width="20"			
						height="20"		
						/>
						
					<ProjectCard name = "Computer Graphics 3D engine"
						tags={["C"]}
						href="https://www.github.com/AmetsMarti/3D_engine"
						alt="Miniatura del motor 3D"
						desc="Un motor 3D desarrollado en la asignación de Gráficos por Computadora en la universidad, es puramente para fines educativos y explora diferentes funcionalidades como transformaciones, iluminación y cámaras."
						image_url="3d_engine_thumbnail.png"
						width="20"
						height="20"	
					/>
					
					<ProjectCard name = "React map Generator"
						tags={["React", "JavaScript", "HTML", "CSS"]}
						href="https://www.github.com/AmetsMarti/map_generator_next"
						alt="React Map generator"
						desc="Implementacion del generador de mapas en React, es puramente para mostrar un diseño hecho en React de un algoritmo ya implementado por mi"
						image_url="map_generator_next_thumbnail.png"
						width="20"
						height="20"	
					/>
				</div>
			</section>
		</GlassCard>
	</div>
</Layout>

